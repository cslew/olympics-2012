%div.count.alert.alert-info{style: "width: 300px; margin-left: auto; margin-right: auto; text-align: center"}
  %p{style: "font-size: 120%"}
    Countries with medals:
    %span.number{style: "font-weight: bold"}
      = medal_count.count
%div.medals-table
  %table.tables.table-striped.medals.table-bordered.table-condensed{style: "margin-left: auto;margin-right: auto;text-align:center; font-size: 14px"}
    %thead
      %tr
        %th
          Rank
        %th
          Flag
        %th
          Country
        %th
          Gold
        %th
          Silver
        %th
          Bronze
        %th
          Total
        %th
          Continent
    %tbody
      - medal_count.each do |country|
        %tr
          %td= country['rank']
          %td
            %img{src: "http://www.london2012.com/" + country["flag"]}
          %td{style: "text-align: left"}
            %a{href: "http://www.london2012.com/country/" + country["url"]}
              = country['country']
          %td= country['gold']
          %td= country['silver']
          %td= country['bronze']
          %td= country['total']
          %td
            - if country['continent'] == "africa"
              %span.label=country['continent']
            - elsif country['continent'] == "asia"
              %span.label.label-success=country['continent']
            - elsif country['continent'] == "oceania"
              %span.label.label-warning=country['continent']
            - elsif country['continent'] == "americas"
              %span.label.label-important=country['continent']
            - elsif country['continent'] == "europe"
              %span.label.label-inverse=country['continent']

